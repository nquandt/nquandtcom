@using Components
@using Components.Resume
@model JobModel

@(await Html.RenderViewAsync<BulletsSubSection>(new BulletsSubSection()
{
    Bullets = Model.Bullets,
    Header =
        @<div class="flex justify-between item w-full">
            <div class="flex flex-col">
                <div class="text-xl font-bold">@Model.Title</div>
                @if (!string.IsNullOrWhiteSpace(Model.Url))
                {
                <a class="textPrimary" href="@Model.Url" target="_blank">
                    <div class="text-md font-semibold">@Model.Company</div>
                </a>
                }
                else
                {
                    <div class="text-md font-semibold">@Model.Company</div>
                }
            </div>
        @if (!string.IsNullOrWhiteSpace(Model.DateRange)) {
            <div class="textSecondary text-end">@Model.DateRange</div>
        }
        </div>
}))